{
    "extends": [
        "airbnb",
        "prettier/react"
    ],
    "plugins": [
        "prettier"
    ],
    "env": {
        "browser": true,
        "jasmine": true
    },
    "rules": {
        "arrow-parens": 0,
        "object-curly-newline": 0,
        "class-methods-use-this": 0,
        "comma-dangle": [2, "always-multiline"],
        "no-unused-vars": [1, {"extensions": [".js"]}],
        "react/prefer-stateless-function": [1, {"extensions": [".js"]}],
        "react/jsx-filename-extension": [1, {"extensions": [".js"]}],
        "prettier/prettier": ["error", { "singleQuote": true }]
    },
    "parser": "babel-eslint"
}
